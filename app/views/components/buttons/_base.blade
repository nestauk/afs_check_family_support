<button {{ attributes.merge({
    "class": "
        px-4 pt-2 pb-1.5 rounded border-b-2
        bg-clip-padding
        active:translate-y-0.5 active:border-transparent
        select-none
        font-semibold
        focusable
    ",
    {{-- Prevent the button being focused on a click --}}
    "onmouseup": "this.blur()",
    "type": "button"
}) }}>
    {{ slot }}
</button>