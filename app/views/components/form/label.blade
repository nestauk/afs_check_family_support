@props({label: _required, horizontal: false})
@ruby
layoutClasses = horizontal ? "sm:-:flex-row sm:[&>span]:-:w-24 sm:-:items-center sm:-:gap-4" : ""
@endruby
<label {{ attributes.merge({class: "-:flex -:font-semibold -:flex-col -:gap-[3px] #{layoutClasses}"}) }}>
  <span class="block ml-px shrink-0">{{ label }}</span>
  {{ slot }}
</label>